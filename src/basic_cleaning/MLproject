name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact: {type: string, description: "Input artifact to clean"}
      output_artifact: {type: string, description: "Output artifact after cleaning"}
      output_type: {type: string, description: "Type of the output dataset"}
      output_description: {type: string, description: "Description of the output dataset"}
      min_price: {type: float, description: "Minimum price to consider"}
      max_price: {type: float, description: "Maximum price to consider"}
    command: >
      python run.py
      --input_artifact {input_artifact}
      --output_artifact {output_artifact}
      --output_type {output_type}
      --output_description {output_description}
      --min_price {min_price}
      --max_price {max_price}
