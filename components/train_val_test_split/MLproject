name: train_val_test_split
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input:
        description: Input artifact
        type: string
      test_size:
        description: Fraction of data for the test set
        type: float
      random_seed:
        description: Seed for reproducibility
        type: int
        default: 42
      stratify_by:
        description: Column to use for stratification
        type: string
        default: "none"
    command: "python run.py {input} {test_size} --random_seed {random_seed} --stratify_by {stratify_by}"
